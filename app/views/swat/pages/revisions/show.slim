a ui-href="revisions"
  | All Revisions

h1
  | Revision "{{ revision.data.name }}"

table.table.table-bordered.table-hover
  tr
    th Revision
    th Branch
    th User
    th Status
  tr
    td
      | {{ revision.data.name }}
    td
      | {{ revision.data.branch }}
    td
      | {{ revision.data.user }}
    td
      | {{ revision.info.status }}

div
  tabset
    tab ng-repeat="thread in revision.data.threads"
      tab-heading
        span.label.status title=" {{ thread.status.label }}" ng-class="thread.status.name"
          | {{ thread.thread_name }}
        span.label.total-examples
          | {{ thread.total_runned }}
      table.table.table-bordered
        tr
          th Test
          th Location
          th Duration
          th Status
        tr ng-repeat="test in revision.data.tests[thread.thread_id]" ng-class="test.status"
          td
            | {{ test.full_description }}
          td
            | {{ test.location }}
          td
            | {{ test.run_time }}
          td
            | {{ test.status }}


